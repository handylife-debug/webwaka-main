  "shortcuts": [
    {
      "name": "Quick Sale",
      "short_name": "Sale",
      "description": "Start a new sale transaction",
      "url": "/pos?action=quick_sale",
      "icons": [
        {
          "src": "/icons/shortcut-sale.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Inventory Check",
      "short_name": "Inventory",
      "description": "Check current inventory levels",
      "url": "/inventory?view=quick_check",
      "icons": [
        {
          "src": "/icons/shortcut-inventory.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics",
      "description": "View business intelligence dashboard",
      "url": "/analytics?view=dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Customer Management",
      "short_name": "Customers",
      "description": "Manage customer profiles and data",
      "url": "/customers?action=manage",
      "icons": [
        {
          "src": "/icons/shortcut-customers.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
