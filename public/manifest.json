    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.webwaka.pos",
      "id": "com.webwaka.pos"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/webwaka-pos/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "webwaka",
      "url": "/app?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share-receipt",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*", ".pdf", ".json"]
        }
      ]
    }
  }
}