run = "cowsay Configure me!"
entrypoint = "README.md"
modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cowsay"]

[agent]
expertMode = true
integrations = ["replitmail:1.0.0", "javascript_database:1.0.0", "twilio_send_message:1.0.0", "github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd platforms && pnpm dev --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40641
externalPort = 3001

[[ports]]
localPort = 44923
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd platforms && pnpm start"]
build = ["bash", "-c", "cd platforms && pnpm build"]
